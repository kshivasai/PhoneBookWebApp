@model IEnumerable<PhoneBookWebApp.Models.People>
@{
    ViewBag.Title = "Search";
}




@using (Html.BeginForm("IndexOne"))
{

    @Html.AntiForgeryToken()
    <style>
        
        table {
            border-collapse: separate;
            border-spacing: 0 15px;
        }

        th {
            background-color: #4287f5;
            color: white;
        }

        th,
        td {
            width: 150px;
            text-align: center;
            padding: 5px;
        }
    </style>

    <div class="form-horizontal" id="SearchForm">

        <hr />

        <div class="form-group">
            @Html.Label("Group By", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("select", ViewBag.listDropDown as List<SelectListItem>, "select", htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" id="btnSearch" class="btn btn-default" />
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Total Records", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <p>@ViewBag.Count</p>
            </div>
        </div>
    </div>
}
@if (ViewBag.list != null)
{

    <table class="group">
        <tr>
            <th>
                @Html.DisplayName("Name")
            </th>
            <th>
                @Html.DisplayName("Count")
            </th>
        </tr>

        @foreach (var item in ViewBag.list)
        {
            <tr>
                <td> @item.Key</td>
                <td>@item.Value</td>
            </tr>
        }
    </table>
}

